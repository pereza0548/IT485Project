# This code displays the top ten artists for a country

# put your own API Key
API_KEY = 
USER_AGENT = 'Gabriela'

import requests

def lastfm_get(payload):
    
    headers = {'user-agent': USER_AGENT}
    url = 'https://ws.audioscrobbler.com/2.0/'

    payload['api_key'] = API_KEY
    payload['format'] = 'json'

    response = requests.get(url, headers=headers, params=payload)
    return response

r = lastfm_get({
    'method': 'geo.getTopArtists',
    # Here is where you can change the country
    'country':  'Ecuador'
})


import json

def jprint(obj):
    
    text = json.dumps(obj, sort_keys=True, indent=4)
    print(text)

r.json()['topartists']['artist']
# This prints the name of the artists, and shows only 10
artists = [t['name'] for t in r.json()['topartists']['artist'][:10]]
print(artists)
